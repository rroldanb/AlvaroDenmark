<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  let imageElement = document.querySelector(
    "#bg-image-contacto"
  ) as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = "contacto.webp";
  } else {
    imageElement.src = "contacto.avif";
  }
</script>
